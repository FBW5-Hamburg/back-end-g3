<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%- include('partials/htmlJs') %>

    <%- include('partials/adminCss') %>

    <title>Interface exam</title>
</head>

<body>
    <div class="container ">
        <div class="row"><br>
            <span class="image-position"><a href="https://www.facebook.com/meuix/?ref=settings" target="_blank">
                    <img
                        src="https://lh4.googleusercontent.com/fLEIj3iQb7O1FhjOpLFbJtHmsMlLGmLynSWUvAP70qF0HLEBty-FANvwweg7Sv2XqSpzOKNI=w1366-h638"></a>
            </span>
        </div>
        <div class=" row"><br><br>
            <div class="col-sm-8 col-sm-offset-2">
                <div class="loader row">

                    <div class="col-md-4 mb-3">
                        <label for="examTitle">Title</label>
                        <input type="text" class="form-control" id="examTitle" placeholder="Please enter the exam title"
                            required>

                    </div>


                    <br><br>
                    <br>
                    <br>
                    <% for(let i= 0; i < questions.length; i++){%>
                    <div id="quiz" class=" col-md-3 quizContainer ">

                        <div class="question">

                            <h3><span class="label label-warning" id="qid"><%=i+1%></span>
                                <!-- <span id="question"> How can you add a single line comment in a JavaScript?</span> -->
                                <input type="text" class="" value="<%= questions[i].Q %>">
                            </h3>
                        </div>
                        <ul>

                            <li>
                                <input type="text" class="choiceInp1" name="selector" value="<%=questions[i].C[0]%>">

                            </li>

                            <li>
                                <input type="text" class="choiceInp2" name="selector" value="<%=questions[i].C[1]%>">

                            </li>
                            <li>
                                <input type="text" class="choiceInp3" name="selector" value="<%=questions[i].C[2]%>">
                            </li>
                        </ul>
                        <div>
                            <input type="number" class="answerInp" value="<%= questions[i].A %>">
                        </div>
                        <br>
                        <!-- <a href="#" class="btn btn-success mt-3 editBtn" questionid="%=_id%>">Edit</a> -->


                        <div class="form-check">
                            <input type="checkbox" class="form-check-input checkBoxInp" qid="<%-questions[i].id%>">
                            <label class="form-check-label" for="checkBoxInp">Add this question</label>
                        </div>


                        <br>
                        <br>
                    </div>
                    <!-- <br> -->
                    <% } %>
                    <br>
                </div>

                <button class="btn btn-success mt-3" id="saveBtnExam">Save this exam</button>

                <div class="text-muted">
                    <span id="answer"></span>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
                <div id="result-of-question" class="pulse animated" style="display: none;">
                    <span id="totalCorrect" class="pull-right"></span>
                    <table class="table table-hover table-responsive">
                        <thead>
                            <tr>
                                <th>Question No.</th>
                                <th>Our answer</th>
                                <th>Your answer</th>
                                <th>Result</th>
                            </tr>
                        </thead>
                        <tbody id="quizResult"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" tabindex="-1" role="dialog" id="deleteConfirmModule">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header bg-danger">
                    <h5 class="modal-title">Are you sure?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>This book and its related files gonna be deleted and there is no way to bring them back.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" style="background-color: red;"
                        id="deleteQuestionBtn">Delete</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/htmlJsFooter') %>

    <script>
        // Save the exam
        document.querySelector('#saveBtnExam').addEventListener('click', e => {
            e.preventDefault()
            const examTitle = document.querySelector('#examTitle')
            const checkedBoxes = document.querySelectorAll('.checkBoxInp[type=checkbox]:checked')
            const selectedQuestionsIds = []
            checkedBoxes.forEach(box => {
                selectedQuestionsIds.push(box.getAttribute('qid'))
            })

            const sentExam = {
                examTitle: examTitle.value,
                selectedQuestionsIds
            }

            fetch('/admin/examInterface', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(sentExam)
            }).then(response => {
                console.log(response);
                if (response.status == 200) {
                    response.json().then(data => {
                        switch (data) {
                            case 1:
                                alert("this Exam successfully saved")
                                break;

                            case 2:
                                alert("Please enter the exam title")
                                break;
                            case 3:
                                alert("This Exam is already exist")
                                break;
                            case 4:
                                alert("server error")
                                break;
                        }
                    }).catch(error => {
                        alert("server side error, please contact the web admin")
                    })
                } else {
                    alert("can not connect to the server")
                }

            }).catch(error => {
                console.log(error);
            })

        })
    </script>


</body>

</html>