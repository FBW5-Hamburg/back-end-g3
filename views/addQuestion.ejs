<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%- include('partials/htmlJs') %> 

    <%- include('partials/htmlCss') %>

    <title>Document</title>
</head>
<body>
    <div class="container">
        <div class="row"><br>
            <span class="image-position"><a href="https://www.facebook.com/meuix/?ref=settings" target="_blank">
	           <img src="https://lh4.googleusercontent.com/fLEIj3iQb7O1FhjOpLFbJtHmsMlLGmLynSWUvAP70qF0HLEBty-FANvwweg7Sv2XqSpzOKNI=w1366-h638"></a>
	        </span>
        </div>
        <div class="row"><br><br>
            <div class="col-sm-8 col-sm-offset-2">
                <div class="loader">
                    <div class="col-xs-3 col-xs-offset-5">
                        <div id="loadbar" style="display: none;">
                            <img src="https://8finatics.s3.amazonaws.com/static/reload_emi.gif" alt="Loading" class="center-block loanParamsLoader" >
                        </div>
                    </div>

                    <div id="quiz">
                  
                        <div class="question">
                            <h3><span class="label label-warning" id="qid">1</span>
                            <!-- <span id="question"> How can you add a single line comment in a JavaScript?</span> -->
                            <input type="text" id ="question" placeholder=" insert your question here ">
                            </h3>
                        </div>
                        <ul>
                          <li>
                            <input type="text" id="f-option" name="selector" value="1." >
                        
                          </li>
                          
                          <li>
                            <input type="text" id="s-option" name="selector" value="2.">
                            
                          </li>
                          
                          <li>
                            <input type="text" id="t-option" name="selector" value="3.">
                          
                          </li>
                        </ul>
                        <input type="number" id ="answer"placeholder="correct answer">
                    <button class="btn btn-success mt-3" id="questionSaveBtn">Save Now</button>
                    </div>
                </div>
                <div class="text-muted">
                    <span id="answer"></span>
                </div>
                
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
                <div id="result-of-question" class="pulse animated" style="display: none;">
                    <span id="totalCorrect" class="pull-right"></span>
                    <table class="table table-hover table-responsive" >
                        <thead>
                            <tr>
                                <th>Question No.</th>
                                <th>Our answer</th>
                                <th>Your answer</th>
                                <th>Result</th>
                            </tr>
                        </thead>
                        <tbody id="quizResult"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <%- include('partials/htmlJsFooter') %> 
<script>

// connect the save btn 
document.querySelector('#questionSaveBtn').addEventListener('click', e =>{
    e.preventDefault()
// get the data of the input values 
const question = document.querySelector('#question').value
const choice1 = document.querySelector('#f-option').value
const choice2 = document.querySelector('#s-option').value
const choice3 = document.querySelector('#t-option').value
const answer = document.querySelector('#answer').value

const sentQuestion = {
    question, 
    choice1,
    choice2,
    choice3, 
    answer
}
 
console.log(sentQuestion);

fetch('/admin/addQuestion', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                    //'Content-Type': 'application/x-www-form-urlencoded'
                },
                body: JSON.stringify(sentQuestion)
            }).then(response => {
                console.log(response);
                if (response.status == 200) {
                    response.json().then(data => {
                        console.log(data);
                        switch(data) {
                            case 1:
                                alert("the question has been saved correctly and it will be shown")
                                break;
                            case 2:
                                alert("Some entries is missing, make sure to enter all required data")
                                break;
                            case 3:
                                alert("this question already exist")
                                break;
                            default:
                                break;
                        }
                    })
                } else {
                    console.log('error');
                }
            })

})




</script>



</body>
</html>